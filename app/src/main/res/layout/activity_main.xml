<?xml version="1.0" encoding="utf-8"?>
<com.wuk.mytools.view.ElasticScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_color_alpha"
            android:layout_width="156dp"
            android:layout_height="60dp"
            android:background="@color/purple_200"
            android:gravity="center"
            android:text="透明度转换"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_recycler"
            android:layout_width="156dp"
            android:layout_height="60dp"
            android:background="@color/purple_200"
            android:gravity="center"
            android:text="拖拽列表"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_bookshelf"
            android:layout_width="156dp"
            android:layout_height="60dp"
            android:background="@color/purple_200"
            android:gravity="center"
            android:text="recycler书架列表"/>
        <TextView
            android:id="@+id/tv_bookshelf_grid"
            android:layout_width="156dp"
            android:layout_height="60dp"
            android:background="@color/purple_200"
            android:gravity="center"
            android:text="Grid书架列表"/>


        <TextView
            android:id="@+id/tv_draw"
            android:layout_width="156dp"
            android:layout_height="60dp"
            android:background="@color/purple_200"
            android:gravity="center"
            android:text="手写板"/>

        <TextView
            android:id="@+id/tv_slide"
            android:layout_width="156dp"
            android:layout_height="60dp"
            android:background="@color/purple_200"
            android:gravity="center"
            android:text="卡片滑动"/>
    </LinearLayout>



</com.wuk.mytools.view.ElasticScrollView>